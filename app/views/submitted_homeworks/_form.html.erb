<% if @sHomework.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@sHomework.errors.count, "error") %> prohibited this pet from being saved:</h2>
    <ul>
      <% @sHomework.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-4">
    <div class="title-field">
      <%= f.text_field :title, maxlength: 24, size: 48 , placeholder: "간단한 과제 설명 ( 최대 24자 )", class: "form-control" %>
    </div>
    <div class="field">
      <%= f.file_field :img, class: "form-control homework-file" %><br><br>
      <%= f.submit "제출하기", class: "btn btn-primary" %>
      <%= link_to "취소", :back, class: "btn btn-warning" %>
    </div>
  </div>
</div>
